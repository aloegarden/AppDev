<Page x:Class="AppDev_Final_Project__Medical_Records_.pages.MedicinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDev_Final_Project__Medical_Records_.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MedicinePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" MinWidth="100" VerticalAlignment="Top">
            <Button x:Name="btnManageMedicine" Content="Manage Medicine" MinHeight="50" Click="btnManageMedicine_Click"/>
            <Button x:Name="btnReleaseMedicine" Content="Release Medicine" MinHeight="50" Click="btnReleaseMedicine_Click"/>
            <Button x:Name="btnViewReleasedMedicine" Content="View Released Medicine" MinHeight="50" Click="btnViewReleasedMedicine_Click"/>
        </StackPanel>
        <Frame x:Name="Main" Grid.Column="1" Margin="10 0 0 0"/>
    </Grid>
</Page>
